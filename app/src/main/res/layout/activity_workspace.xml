<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:gravity="center">


    <com.tim.annotation.view.AnnotatedView
        android:id="@+id/annotatedview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/workspace_bottom_bar_ll"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"/>


    <LinearLayout
        android:id="@+id/workspace_bottom_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/workspace_toolbox_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tool_box_bar_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/workspace_toolbox_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_gesture_48"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/workspace_undo_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tool_box_bar_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/workspace_undo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_undo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/workspace_redo_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tool_box_bar_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/workspace_redo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_redo"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/workspace_clear_all_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tool_box_bar_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/workspace_clear_all_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_clear_all"/>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>