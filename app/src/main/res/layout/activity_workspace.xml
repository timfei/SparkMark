<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:gravity="center">


    <com.tim.annotation.view.AnnotatedView
        android:id="@+id/annotatedview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/workspace_bottom_bar_ll"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"/>


    <LinearLayout
        android:id="@+id/workspace_bottom_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/workspace_toolbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_settings"/>


            <!--<at.markushi.ui.CircleButton-->
            <!--android:id="@+id/workspace_toolbox_btn"-->
            <!--android:layout_width="@dimen/size_36dp"-->
            <!--android:layout_height="@dimen/size_36dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_gravity="bottom|left"-->
            <!--android:layout_marginBottom="@dimen/margin_8dp"-->
            <!--android:layout_marginLeft="@dimen/margin_8dp"-->
            <!--android:src="@drawable/ic_settings"-->
            <!--app:cb_color="@color/toolbox_color"/>-->


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/workspace_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_undo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/workspace_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_redo"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/workspace_smile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_8dp"
                android:src="@drawable/ic_smile"/>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>